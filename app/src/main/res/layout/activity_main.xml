<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8000000"
    android:backgroundTint="#F8000000"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/six"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="6"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/three"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintStart_toEndOf="@+id/five"
        app:layout_constraintTop_toBottomOf="@+id/nine"
        tools:text="6" />

    <Button
        android:id="@+id/minus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="-"
        android:textAlignment="center"
        android:textColor="#65FAFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/plus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/six"
        app:layout_constraintTop_toBottomOf="@+id/multiply"
        tools:text="-" />

    <Button
        android:id="@+id/three"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/dot"
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintStart_toEndOf="@+id/two"
        app:layout_constraintTop_toBottomOf="@+id/six"
        tools:text="3" />

    <Button
        android:id="@+id/plus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="+"
        android:textAlignment="center"
        android:textColor="#65FAFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/equal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/three"
        app:layout_constraintTop_toBottomOf="@+id/minus"
        tools:text="+" />

    <Button
        android:id="@+id/nine"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="9"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/six"
        app:layout_constraintEnd_toStartOf="@+id/multiply"
        app:layout_constraintStart_toEndOf="@+id/eight"
        app:layout_constraintTop_toBottomOf="@+id/precent"
        tools:text="9" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="x"
        android:textAlignment="center"
        android:textColor="#65FAFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/minus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nine"
        app:layout_constraintTop_toBottomOf="@+id/divede"
        tools:text="x" />

    <Button
        android:id="@+id/equal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/equalsroundedbutton"
        android:backgroundTint="@color/white"
        android:text="="
        android:textAlignment="center"
        android:textColor="@color/ButtonBackground"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@+id/plus"
        tools:text="=" />

    <Button
        android:id="@+id/pp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/roundedbutton"
        android:text="+ / -"
        android:textAlignment="center"
        android:textColor="#65FAFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/zero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/one"
        tools:text="+ / -" />

    <Button
        android:id="@+id/dot"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/roundedbutton"
        android:text="."
        android:textAlignment="center"
        android:textColor="#65FAFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equal"
        app:layout_constraintStart_toEndOf="@+id/zero"
        app:layout_constraintTop_toBottomOf="@+id/three" />

    <Button
        android:id="@+id/clear"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="C"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/seven"
        app:layout_constraintEnd_toStartOf="@+id/brackets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:text="C" />

    <Button
        android:id="@+id/seven"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="7"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/four"
        app:layout_constraintEnd_toStartOf="@+id/eight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear"
        tools:text="7" />

    <Button
        android:id="@+id/one"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/pp"
        app:layout_constraintEnd_toStartOf="@+id/two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/four"
        tools:text="1" />

    <Button
        android:id="@+id/four"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="4"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/one"
        app:layout_constraintEnd_toStartOf="@+id/five"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seven"
        tools:text="4" />

    <Button
        android:id="@+id/precent"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="%"
        android:textAlignment="center"
        android:textColor="#65FAFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/nine"
        app:layout_constraintEnd_toStartOf="@+id/divede"
        app:layout_constraintStart_toEndOf="@+id/brackets"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:text="%" />

    <Button
        android:id="@+id/brackets"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="( )"
        android:textAlignment="center"
        android:textColor="#65FAFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/eight"
        app:layout_constraintEnd_toStartOf="@+id/precent"
        app:layout_constraintStart_toEndOf="@+id/clear"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:text="( )" />

    <Button
        android:id="@+id/five"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/two"
        app:layout_constraintEnd_toStartOf="@+id/six"
        app:layout_constraintStart_toEndOf="@+id/four"
        app:layout_constraintTop_toBottomOf="@+id/eight"
        tools:text="5" />

    <Button
        android:id="@+id/eight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="8"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/five"
        app:layout_constraintEnd_toStartOf="@+id/nine"
        app:layout_constraintStart_toEndOf="@+id/seven"
        app:layout_constraintTop_toBottomOf="@+id/brackets"
        tools:text="8" />

    <Button
        android:id="@+id/two"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/zero"
        app:layout_constraintEnd_toStartOf="@+id/three"
        app:layout_constraintStart_toEndOf="@+id/one"
        app:layout_constraintTop_toBottomOf="@+id/five"
        tools:text="2" />

    <Button
        android:id="@+id/zero"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/roundedbutton"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dot"
        app:layout_constraintStart_toEndOf="@+id/pp"
        app:layout_constraintTop_toBottomOf="@+id/two"
        tools:text="0" />

    <Button
        android:id="@+id/divede"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="154dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/roundedbutton"
        android:text="/"
        android:textAlignment="center"
        android:textColor="#65FAFAFA"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/precent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:text="/" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/Answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flow">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Exercise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="241dp"
                android:text="0"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.04" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/deleteIcon"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_backspace"
        app:layout_constraintBottom_toTopOf="@+id/divede"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:src="@drawable/ic_backspace" />

    <TextView
        android:id="@+id/Answer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="40dp"
        android:text="0"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="321dp"
        android:layout_marginBottom="35dp"
        android:text="History"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="31dp"
        app:constraint_referenced_ids="horizontalScrollView"
        app:layout_constraintBottom_toBottomOf="@+id/Answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/horizontalScrollView" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="nine,brackets,plus,dot,pp,five,divede,precent,minus,two,six,four,seven,eight,multiply,three,equal,one,zero,clear" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="plus,one,six,minus,seven,five,three,nine,multiply,eight,divede,zero,equal,brackets,clear,pp,precent,two,dot,four" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="multiply,plus,zero,two,precent,deleteIcon,brackets,five,six,one,dot,four,equal,textView,nine,eight,divede,seven,three,pp,minus,clear" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="divede,precent,five,seven,multiply,three,one,pp,clear,dot,plus,four,brackets,two,six,minus,equal,nine,eight,zero" />


</androidx.constraintlayout.widget.ConstraintLayout>